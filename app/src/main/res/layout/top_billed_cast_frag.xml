<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_featured_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_margin_vertical"
    android:layout_marginTop="@dimen/card_margin_vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


  <android.support.constraint.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >

  <TextView
      android:id="@+id/tv_top_billed_cast_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingLeft="@dimen/activity_horizontal_margin"
      android:paddingRight="@dimen/activity_horizontal_margin"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toTopOf="@+id/rv_top_billed_list"
      android:paddingTop="@dimen/card_large_margin"
      android:text="@string/top_billed_cast_title"
      android:paddingBottom="@dimen/card_small_margin"
      android:textAppearance="@android:style/TextAppearance.Material.Title"
      android:textSize="22sp"
      tools:targetApi="lollipop"
      />

  <android.support.v7.widget.RecyclerView
      android:id="@+id/rv_top_billed_list"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:paddingLeft="@dimen/card_thumb_margin"
      android:paddingStart="@dimen/card_thumb_margin"
      android:paddingRight="@dimen/card_thumb_margin"
      android:paddingEnd="@dimen/card_thumb_margin"
      android:paddingBottom="@dimen/top_billed_card_padding_bottom"
      android:clipToPadding="false"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tv_top_billed_cast_title"
      />

  </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>